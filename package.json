{
    "name": "enclowdb",
    "version": "7.0.3",
    "description": "Tiny local JSON database for Node, Electron and the browser (with optional encoding)",
    "keywords": [
        "database",
        "encoding",
        "db",
        "electron",
        "embed",
        "embedded",
        "flat",
        "JSON",
        "local",
        "localStorage",
        "sessionStorage",
        "browser",
        "esm"
    ],
    "homepage": "https://github.com/direct-dev-ru/elowdb#readme",
    "bugs": {
        "url": "https://github.com/direct-dev-ru/elowdb/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/direct-dev-ru/elowdb.git"
    },
    "license": "MIT",
    "author": "Direct-Dev-Ru <info@direct-dev.ru> forked from Typicode <typicode@gmail.com>",
    "type": "module",
    "main": "./lib/index.js",
    "types": "./lib/index.d.ts",
    "exports": {
        ".": {
            "types": "./lib/index.d.ts",
            "import": "./lib/index.js",
            "require": "./lib/index.js"
        },
        "./node": {
            "types": "./lib/node.d.ts",
            "import": "./lib/node.js",
            "require": "./lib/node.js"
        },
        "./browser": {
            "types": "./lib/browser.d.ts",
            "import": "./lib/browser.js",
            "require": "./lib/browser.js"
        }
    },
    "files": [
        "lib",
        "!lib/examples/**/*",
        "!lib/**/*.test.*"
    ],
    "scripts": {
        "test:native:node": "node --import tsx/esm --test-name-pattern='.*' --test ",
        "test:vitest:browser": "vitest --config vitest.config.browser.ts",
        "test:vitest:node": "vitest --config vitest.config.node.ts",
        "test:vitest": "npm run test:vitest:browser && npm run test:vitest:node",
        "test": "npm run test:native:node && npm run test:vitest",
        "test:coverage": "vitest run --coverage",
        "lint": "eslint src --ext .ts --ignore-path .gitignore",
        "build": "del-cli lib && tsc",
        "esbuild": "del-cli lib && npm run build:types && npm run build:bundle",
        "esbuild:types": "tsc --emitDeclarationOnly",
        "esbuild:bundle": "esbuild src/index.ts --bundle --platform=node --format=esm --outfile=lib/bundle.mjs",
        "prepublishOnly": "npm run build",
        "postversion": "git push --follow-tags && npm publish",
        "prepare": "husky install"
    },
    "dependencies": {
        "@types/node-cron": "^3.0.11",
        "bson": "^6.10.3",
        "deasync": "^0.1.30",
        "node-cron": "^3.0.3",
        "steno": "^4.0.2"
    },
    "devDependencies": {
        "@commitlint/cli": "^18.4.3",
        "@commitlint/config-conventional": "^18.4.3",
        "@commitlint/prompt-cli": "^18.4.3",
        "@peculiar/webcrypto": "^1.4.1",
        "@sindresorhus/tsconfig": "^5.0.0",
        "@types/deasync": "^0.1.5",
        "@types/express": "^4.17.21",
        "@types/js-yaml": "^4.0.9",
        "@types/lodash": "^4.14.202",
        "@types/node": "^20.10.5",
        "@typicode/eslint-config": "^1.2.0",
        "@vitest/browser": "^1.6.1",
        "@vitest/coverage-v8": "^1.2.2",
        "del-cli": "^5.1.0",
        "esbuild": "^0.25.3",
        "eslint": "^8.56.0",
        "express-async-handler": "^1.2.0",
        "husky": "^8.0.3",
        "lodash": "^4.17.21",
        "playwright": "^1.52.0",
        "tempy": "^3.1.0",
        "ts-node": "^10.9.2",
        "tsx": "^4.7.0",
        "typescript": "^5.1.0",
        "vite-tsconfig-paths": "^4.3.1",
        "vitest": "^1.6.1"
    },
    "engines": {
        "node": ">=18"
    }
}